<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>WISH LIST</title>
  <link rel="stylesheet" href="/css/style2.css">
  <script src="/send_url.js"></script>
</head>

<body>
  
  <%- include('header');  %>
  <div class="container">
    <div class="container-header">
      <h1>WISH LIST</h1>
      <p id="xxx"></p>
      <script>
        let nowdate = new Date();
        document.getElementById("xxx").innerHTML = nowdate.toLocaleDateString();
      </script>
      <a href="/new" class="new-button">新規追加</a>
    </div>
    <div class="index-table-wrapper">
      <div class="table-head">
        <span class="id-column">ID</span>
        <span class="name-column">WISH</span>
        <span class="newtime">達成目標日</span>
      </div>
      <ul class="table-body">
        <% items.forEach((item)=> { %>
          <li>
            <div class="item-data">
              <span class="id-column">
                <%= item.id %>
              </span>
              <span class="name-column">
                <%= item.name %>
              </span>
              <span class="newtime">
                <%= item.acheieve_date %>
              </span>
            </div>
            <div class="item-menu">
              <a href="/showmemo/<%= item.id %>"> メモ</a>
              <form action="/delete/<%= item.id %>" method="post">
                <input type="submit" value="削除">
              </form>
              <a href="/edit/<%= item.id %>">編集</a>
              <form action="/tassei/<%= item.id %>" method="post">
                <input type="submit" value="達成">
              </form>
            </div>
          </li>
          <% }); %>
      </ul>
    </div>
  </div>
</body>

</html>